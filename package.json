{
  "name": "techkitFormatters",
  "publisher": "Auto-formatter",
  "icon": "icon.png",
  "displayName": "Auto Formatter",
  "description": "A custom auto formatter for VS Code supporting JS, TS, React, and Python.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/techkitFormatters.git"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "javascript",
        "extensions": [".js", ".mjs", ".cjs"],
        "aliases": ["JavaScript"]
      },
      {
        "id": "typescript",
        "extensions": [".ts"],
        "aliases": ["TypeScript"]
      },
      {
        "id": "typescriptreact",
        "extensions": [".tsx"],
        "aliases": ["React (TSX)"]
      },
      {
        "id": "python",
        "extensions": [".py"],
        "aliases": ["Python"]
      }
    ],
    "commands": [
      {
        "command": "Auto-formatter.techkitFormatters",
        "title": "Format Document with Auto Formatter"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "prettier": "^3.5.2",
    "vscode": "^1.1.37"
  }
}
